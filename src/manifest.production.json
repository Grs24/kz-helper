{
  "manifest_version": 2,
  "name": "kz-helper",
  "description": "kuaizi小助手，加筷开发！",
  "version": "0.1.0",
  "options_page": "options.html",
  "short_name": "kuaiziHelp",
  "homepage_url": "https://www.kuaizi.ai",
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "default_icon": "img/logo.png",
    "default_title": "kuaizi小助手，加筷开发！",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "img/logo.png",
    "48": "img/logo.png",
    "128": "img/logo.png"
  },
  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "declarativeContent"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "offline_enabled": true
}
